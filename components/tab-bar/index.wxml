<view class="container">

  <view class="icons">
    <view bindtap="onGoToHome">
      <l-icon name="home" size="46" l-class="c-mall"></l-icon>
      <text>首页</text>
    </view>
    <view bindtap="onGoToCart">
      <l-badge shape="circle" max-count="99" value="2">
        <l-icon name="cart" size="46" color="#157658"></l-icon>
      </l-badge>
      <text>购物车</text>
    </view>
  </view>

  <view bindtap="onAddToCart" class="cart btn-font">
    <text>加入购物车</text>
  </view>
  <view bindtap="onBuy" class="buy btn-font">
    <text>立即购买</text>
  </view>

</view>